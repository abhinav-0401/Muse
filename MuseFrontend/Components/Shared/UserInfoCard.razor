@using MuseFrontend.Models
@using MuseFrontend.Services
@inject ApiService ApiService

<div class="bg-white/20 backdrop-blur-md rounded-2xl w-auto border border-white/30 shadow-xl mb-8 overflow-hidden p-8">
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
            <div
                class="w-12 h-12 bg-linear-to-br from-purple-400 to-pink-400 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white font-bold">@(User?.Username.Substring(0, 2).ToUpper())</span>
            </div>
            <div>
                <p class="text-white font-semibold">@User?.Username</p>
                <p class="text-white/60 text-sm">@User?.Id</p>
            </div>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public UserInfo? User { get; set; } = default;
}